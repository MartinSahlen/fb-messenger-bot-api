  "license": "MIT",
  "bugs": {
    "url": "https://github.com/crisboarna/fb-messenger-api/issues"
  },
  "homepage": "https://github.com/crisboarna/fb-messenger-api#readme",
  "devDependencies": {
    "chai": "4.1.2",
    "commitizen": "2.9.6",
    "cz-conventional-changelog": "2.0.0",
    "mocha": "4.0.1",
    "nyc": "11.2.1",
    "proxyquire": "1.8.0",
    "semantic-release": "8.2.0",
    "sinon": "4.0.1"
  },
